{
    "name"             : "whizark/silex-app",
    "description"      : "A boilerplate for Silex application",
    "version"          : "1.0.0",
    "type"             : "package",
    "keywords"         : [
        "silex",
        "boilerplate"
    ],
    "homepage"         : "https://github.com/whizark/silex-app",
    "license"          : "MIT",
    "minimum-stability": "stable",
    "authors"          : [
        {
            "name"    : "Whizark",
            "homepage": "http://whizark.com",
            "role"    : "Developer"
        }
    ],
    "support"          : {
        "issues": "https://github.com/whizark/silex-app/isssues",
        "source": "https://github.com/whizark/silex-app"
    },
    "require": {
        "php"                          : ">=5.4.0",
        "silex/silex"                  : "~1.1",
        "silex/web-profiler"           : "~1.0",
        "symfony/config"               : "~2.3",
        "symfony/yaml"                 : "~2.3",
        "symfony/finder"               : "~2.3",
        "symfony/form"                 : "~2.3",
        "symfony/translation"          : "~2.3",
        "symfony/validator"            : "~2.3",
        "symfony/twig-bridge"          : "~2.3",
        "symfony/monolog-bridge"       : "~2.3",
        "swiftmailer/swiftmailer"      : ">=4.1.2,<4.2-dev",
        "doctrine/dbal"                : "2.2.*",
        "igorw/config-service-provider": "~1.2"
    },
    "require-dev": {
        "phpunit/phpunit"     : "3.7.*",
        "mockery/mockery"     : "dev-master",
        "symfony/browser-kit" : ">=2.3,<2.4-dev",
        "symfony/css-selector": "~2.3"
    },
    "autoload"         : {
        "psr-4": {
            "App\\": "src/App/"
        }
    }
}
